rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is logged in
    function isLoggedIn() {
      return request.auth != null;
    }

    // Helper: Check if user is an admin
    function isAdmin() {
      // Use exists for performance and safety over get.
      return isLoggedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departments.hasAny(['admin','ceo','software-engineer']);
    }

    // Helper: Check if the user is the one the task is assigned to
    function isAssignee() {
      return request.auth != null &&
             resource.data.assignedTo == request.auth.uid;
    }

    // USERS collection
    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn() && request.auth.uid == uid;
    }

    // SAVED RECORDS collection
    match /savedRecords/{recordId} {
      allow get: if isLoggedIn();
      allow list: if isLoggedIn() && (isAdmin() || request.query.filters.employeeId == request.auth.uid);
      allow create: if isLoggedIn() && request.resource.data.employeeId == request.auth.uid;
      allow update, delete: if isAdmin() || (isLoggedIn() && resource.data.employeeId == request.auth.uid);
    }

    // TASKS collection
    match /tasks/{taskId} {
      // Admins can read any task. Employees can only read tasks assigned to them.
      allow get: if isAdmin() || isAssignee();
      allow list: if isAdmin() || (isLoggedIn() && request.query.filters.assignedTo == request.auth.uid);
      
      // Only admins can create new tasks.
      allow create: if isAdmin();
      
      // Admin can update any field. Assignee can only update status.
      allow update: if isAdmin() || (isAssignee() && request.resource.data.keys().hasOnly(['status']));

      // Only admins can delete tasks.
      allow delete: if isAdmin();
    }

    // UPLOADED FILES collection
    match /uploadedFiles/{fileId} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn();
    }
  }
}

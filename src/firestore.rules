rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is logged in
    function isLoggedIn() {
      return request.auth != null;
    }

    // Helper: Check if user is admin
    function isAdmin() {
      // Use `exists` for performance and safety over `get`.
      return isLoggedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departments.hasAny(['admin','ceo','software-engineer', 'architects']);
    }
    
    // Helper: Check if user is the assigned employee for a task
    function isAssignedEmployee(task) {
      return isLoggedIn() && task.assignedTo == request.auth.uid;
    }

    // USERS collection
    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn() && request.auth.uid == uid;
    }

    // SAVED RECORDS collection
    match /savedRecords/{recordId} {
      allow read: if isLoggedIn(); 
      allow create: if isLoggedIn() && request.resource.data.employeeId == request.auth.uid;
      allow update, delete: if isAdmin() || resource.data.employeeId == request.auth.uid; // Only owner or admin
    }

    // TASKS collection
    match /tasks/{taskId} {
      allow list, get: if isLoggedIn();
      allow create: if isLoggedIn();
      // Admin can update anything.
      // Employee can update status to 'in-progress' or submit for approval ('pending-approval' with submission URL).
      allow update: if isAdmin() || 
                    (isAssignedEmployee(resource.data) &&
                      (
                        (request.resource.data.status == 'in-progress' && resource.data.status == 'not-started') ||
                        (request.resource.data.status == 'pending-approval' && resource.data.status == 'in-progress' && 'submissionUrl' in request.resource.data && request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'submissionUrl', 'submissionFileName'])) ||
                        (request.resource.data.status == 'not-started' && resource.data.status == 'in-progress')
                      )
                    ) || (isAdmin() && request.resource.data.status == 'completed' && resource.data.status == 'pending-approval');
      // Only admins can delete tasks.
      allow delete: if isAdmin();
    }

    // UPLOADED FILES collection
    match /uploadedFiles/{fileId} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn();
    }
  }
}

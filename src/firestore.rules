rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is logged in
    function isLoggedIn() {
      return request.auth != null;
    }

    // Helper: Check if user is admin
    function isAdmin() {
      return isLoggedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departments.hasAny(['admin','ceo','software-engineer']);
    }
    
    // Helper: Check if the user is the owner of the task
    // On read/delete, `resource` refers to the existing document.
    // On write, `request.resource` refers to the incoming document.
    function isTaskOwner() {
      return request.auth != null && resource.data.userId == request.auth.uid;
    }

    // USERS collection
    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn() && request.auth.uid == uid;
    }

    // SAVED RECORDS collection
    match /savedRecords/{recordId} {
      allow read: if isLoggedIn(); 
      allow create: if isLoggedIn() && request.resource.data.employeeId == request.auth.uid;
      allow update, delete: if isAdmin() || resource.data.employeeId == request.auth.uid; // Only owner or admin
    }

    // TASKS collection
    match /tasks/{taskId} {
      // Admins can read any task. Employees can only read tasks assigned to them.
      allow get: if isAdmin() || isTaskOwner();
      allow list: if isLoggedIn(); // List is further restricted in the app query
      
      // Only admins can create new tasks.
      allow create: if isAdmin();
      
      // Admins or the assigned user can update a task.
      allow update: if isAdmin() || isTaskOwner();
      
      // Only admins can delete tasks.
      allow delete: if isAdmin();
    }

    // UPLOADED FILES collection
    match /uploadedFiles/{fileId} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn();
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is logged in
    function isLoggedIn() {
      return request.auth != null;
    }

    // Helper: Check if user is an admin
    function isAdmin() {
      // Use `exists` for performance and safety over `get`.
      return isLoggedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departments.hasAny(['admin','ceo','software-engineer']);
    }
    
    // Helper: Check if the user is the one the task is assigned to
    function isAssignee() {
      return request.auth != null && resource.data.assignedTo == request.auth.uid;
    }

    // USERS collection
    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn() && request.auth.uid == uid;
    }

    // SAVED RECORDS collection
    match /savedRecords/{recordId} {
      allow read: if isLoggedIn(); 
      allow create: if isLoggedIn() && request.resource.data.employeeId == request.auth.uid;
      allow update, delete: if isAdmin() || resource.data.employeeId == request.auth.uid; // Only owner or admin
    }

    // TASKS collection
    match /tasks/{taskId} {
      // Admin can read all tasks, employees can only read their own.
      allow read: if isAdmin() || isAssignee();

      // Only Admin can create tasks
      allow create: if isAdmin();

      // Employee can update ONLY the 'status' and 'submission' fields of their own task
      allow update: if (isAssignee() && request.resource.data.keys().hasAny(["status", "submissionUrl", "submissionFileName"]))
                    || isAdmin();

      // Only Admin can delete tasks
      allow delete: if isAdmin();
    }

    // UPLOADED FILES collection
    match /uploadedFiles/{fileId} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn();
    }
  }
}

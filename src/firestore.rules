
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is logged in
    function isLoggedIn() {
      return request.auth != null;
    }

    // Helper: Check if user is an admin
    function isAdmin() {
      return isLoggedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departments.hasAny(['admin','ceo','software-engineer']);
    }

    // USERS collection
    match /users/{uid} {
      allow read, write: if isLoggedIn() && request.auth.uid == uid;
      allow list: if isLoggedIn();
    }

    // SAVED RECORDS collection
    match /savedRecords/{recordId} {
      allow read: if isLoggedIn(); 
      allow create: if isLoggedIn(); // Any authenticated user can create a record
      allow update, delete: if isAdmin() || (isLoggedIn() && resource.data.employeeId == request.auth.uid); // Only owner or admin
    }

    // TASKS collection
    match /tasks/{taskId} {
      // Admins can read any task. Employees can only read tasks assigned to them.
      allow read: if isAdmin() || (isLoggedIn() && resource.data.assignedTo == request.auth.uid);
      // Only admins can create new tasks.
      allow create: if isAdmin();
      // Employee can update ONLY their own tasks. Admin can update any task.
      allow update: if isAdmin() || (isLoggedIn() && resource.data.assignedTo == request.auth.uid);
      // Only admins can delete tasks.
      allow delete: if isAdmin();
    }

    // UPLOADED FILES collection
    match /uploadedFiles/{fileId} {
      allow read: if isLoggedIn();
      allow create: if isLoggedIn();
      allow delete, update: if isAdmin() || (isLoggedIn() && resource.data.employeeId == request.auth.uid);
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is logged in
    function isLoggedIn() {
      return request.auth != null;
    }

    // Helper: Check if user is admin
    function isAdmin() {
      // Use `exists` for performance and safety over `get`.
      return isLoggedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departments.hasAny(['admin','ceo','software-engineer']);
    }

    // Helper: Check if user is authorized to update task status
    function canUpdateTaskStatus() {
        return isLoggedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.departments.hasAny(['architects','draftpersons','finance','quantity-management','hr']);
    }

    // USERS collection
    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn() && request.auth.uid == uid;
    }

    // SAVED RECORDS collection
    match /savedRecords/{recordId} {
      allow read: if isLoggedIn(); 
      allow create: if isLoggedIn() && request.resource.data.employeeId == request.auth.uid;
      allow update, delete: if isAdmin() || (isLoggedIn() && resource.data.employeeId == request.auth.uid); // Only owner or admin
    }

    // TASKS collection
    match /tasks/{taskId} {
      // Any logged-in user can read tasks to see team-wide assignments.
      allow read: if isLoggedIn();
      // Only admins can create new tasks.
      allow create: if isAdmin();
      // Admins or specific department members can update tasks
      allow update: if isAdmin() || canUpdateTaskStatus();
      // Only admins can delete tasks.
      allow delete: if isAdmin();
    }

    // UPLOADED FILES collection
    match /uploadedFiles/{fileId} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn();
    }
  }
}

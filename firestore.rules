rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // It's better to use custom claims for roles. This rule assumes you have a 'department' field
      // in the user's /users/{uid} document that you can check.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['ceo', 'admin', 'software-engineer'];
    }

    // users collection
    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn() && request.auth.uid == uid;
    }

    // savedRecords collection
    match /savedRecords/{docId} {
      allow read: if isLoggedIn() && (isAdmin() || request.auth.uid == resource.data.employeeId);
      allow create: if isLoggedIn() && request.auth.uid == request.resource.data.employeeId;
      allow update, delete: if isLoggedIn() && (isAdmin() || request.auth.uid == resource.data.employeeId);
    }

    // uploadedFiles collection
    match /uploadedFiles/{docId} {
      allow read: if isLoggedIn() && (isAdmin() || request.auth.uid == resource.data.employeeId);
      allow create: if isLoggedIn() && request.auth.uid == request.resource.data.employeeId;
      allow update, delete: if isLoggedIn() && (isAdmin() || request.auth.uid == resource.data.employeeId);
    }
    
    // tasks collection
    match /tasks/{taskId} {
        allow read: if isLoggedIn();
        allow create: if isLoggedIn() && isAdmin(); // Only admin can create tasks
        allow update: if isLoggedIn() && (isAdmin() || request.auth.uid == resource.data.assignedTo);
        allow delete: if isLoggedIn() && isAdmin();
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.department in ['admin', 'software-engineer', 'ceo'];
    }

    // USERS: Only the user can read/write their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // SAVED RECORDS & UPLOADED FILES: Any authenticated user can read all, but only create/edit/delete their own (or if admin).
    match /savedRecords/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.employeeId == request.auth.token.record;
      allow update, delete: if request.auth != null && (resource.data.employeeId == request.auth.token.record || isAdmin());
    }

    match /uploadedFiles/{fileId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.employeeId == request.auth.token.record;
      allow update, delete: if request.auth != null && (resource.data.employeeId == request.auth.token.record || isAdmin());
    }

    // TASKS: Admins can do anything. Users can create, and read/update/delete tasks assigned to/by them.
    match /tasks/{taskId} {
      allow list, read, create: if request.auth != null;
      allow update, delete: if request.auth != null && 
                            (resource.data.assignedTo == request.auth.token.record || 
                             resource.data.assignedById == request.auth.token.record || 
                             isAdmin());
    }
  }
}

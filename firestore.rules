rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    // users collection
    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn() && request.auth.uid == uid;
    }

    // savedRecords access
    match /savedRecords/{docId} {
      allow read: if isLoggedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['ceo', 'admin', 'software-engineer'] || resource.data.employeeId == request.auth.uid);
      allow create: if isLoggedIn() && request.resource.data.employeeId == request.auth.uid;
      allow update: if isLoggedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['ceo', 'admin', 'software-engineer'] || resource.data.employeeId == request.auth.uid);
      allow delete: if isLoggedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['ceo', 'admin', 'software-engineer'] || resource.data.employeeId == request.auth.uid);
    }

    // uploadedFiles access
    match /uploadedFiles/{docId} {
      allow read: if isLoggedIn();
      allow create: if isLoggedIn() && request.resource.data.employeeId == request.auth.uid;
      allow update: if isLoggedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['ceo', 'admin', 'software-engineer'] || resource.data.employeeId == request.auth.uid);
      allow delete: if isLoggedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['ceo', 'admin', 'software-engineer'] || resource.data.employeeId == request.auth.uid);
    }
    
    // tasks collection
    match /tasks/{taskId} {
        allow read: if isLoggedIn();
        allow create: if isLoggedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['ceo', 'admin', 'software-engineer'];
        allow update: if isLoggedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['ceo', 'admin', 'software-engineer'] || request.auth.uid == resource.data.assignedTo);
        allow delete: if isLoggedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in ['ceo', 'admin', 'software-engineer'];
    }
  }
}

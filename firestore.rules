rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isLoggedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'ceo', 'software-engineer'];
    }

    // USERS COLLECTION
    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn() && request.auth.uid == uid;
    }

    // SAVED RECORDS
    match /savedRecords/{recordId} {
      allow read: if isLoggedIn(); // All logged-in users can read
      allow create: if isLoggedIn(); // Any logged-in user can create
      allow update, delete: if isAdmin() || resource.data.employeeId == request.auth.uid; // Only admin or owner can update/delete
    }

    // TASKS COLLECTION
    match /tasks/{taskId} {
      allow read: if isLoggedIn();
      allow create: if isAdmin(); // Only admin can create tasks
      allow update: if isAdmin() || resource.data.assignedTo == request.auth.uid; // Only assigned employee or admin can update
      allow delete: if isAdmin(); // Only admin can delete
    }

    // UPLOADED FILES
    match /uploadedFiles/{fileId} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn(); // all logged-in users can upload
    }
  }
}
